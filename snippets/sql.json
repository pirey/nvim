{
  "describe table": {
    "prefix": "describe",
    "body": [
      "SELECT column_name, data_type, is_nullable, column_default",
      "FROM information_schema.columns",
      "WHERE table_name = '${1:your_table}';"
    ]
  },
  "show all tables": {
    "prefix": "tables",
    "body": [
      "SELECT table_name",
      "FROM information_schema.tables",
      "WHERE table_type = 'BASE TABLE' AND table_schema = 'public';"
    ]
  }
}
